<% content_for :flashes do %>
  &nbsp;
<% end %>

<div class="row">
    <div class="login-box">
      <legend><%= I18n.t('devise.passwords.edit.heading') %></legend>
      <%= render :partial => 'layouts/common/flashes' %>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

        <%= f.password_field :password, 
        :class => 'span12', 
        :placeholder => I18n.t('activerecord.attributes.player.new_password') 
        %>

        <%= f.password_field :password_confirmation, 
        :class => 'span12',
        :placeholder => I18n.t('activerecord.attributes.player.new_password_confirmation') 
        %>


        <%= f.hidden_field :reset_password_token %>

        <%= f.submit I18n.t('devise.passwords.edit.submit_button'), :class => 'span12 btn btn-primary btn-block' %>
      <% end %>
    </div>
</div>


